<!-- Ventas del Usuario -->
  <ul class="collection with-header">
    <li class="collection-header white-text"><strong><i class="material-icons left">shopping_cart</i>Mis Compras</strong></li>
    {% if ventas|length > 0 %} 
      <table class="highlight">
        <thead class="grey white-text">
         <tr>
         <td><strong>Fecha</strong></td>
         <td><strong>Monto</strong></td>
         <td><strong>Estado</strong></td> 
         <td><strong>Pago de la Compra</strong></td>  
         <td><strong>Acciones</strong></td>         
         </tr>
        </thead>
        <tbody>
         {% for venta in ventas %}

          {% if venta.estado == "NUEVA" %}
            <tr class="cyan lighten-3">
          {% endif %}
          {% if venta.estado == "EN_PROCESO" %}
            <tr class="light-blue accent-2">
          {% endif %}
          {% if venta.estado == "FINALIZADA" %}
            <tr class="green accent-3">
          {% endif %}
          {% if venta.estado == "CANCELADA" %}
            <tr class="yellow accent-4">
          {% endif %}
          {% if venta.estado == "RECHAZADA" %}
            <tr class="grey lighten-4">
          {% endif %}
         
         <td>{{ venta.fecha|date("d/m/Y") }}</td>
         <td>${{ venta.precio }}</td>
         <td><strong>{{ venta.estado }}</strong></td>
         <td><strong>PENDIENTE</strong></td>
            <td>
             <a href="{{ path('venta_ver',{'idVenta': venta.id}) }}" class="btn-floating btn-small waves-effect waves-light colorOficial white-text" title="Ver"><i class="material-icons">visibility</i></a>  
              {% if venta.estado == "NUEVA" %}
               <a href="{{ path('venta_pagar',{'idVenta': venta.id}) }}" class="btn-floating btn-small waves-effect waves-light colorOficial white-text" title="Pago"><i class="material-icons">payment</i></a>  
              {% endif %}             
            </td>                       
        </tr>   
         {% endfor %}
        </tbody>
      </table>
     <li class="collection-header"><strong>Total de Compras</strong> <div class="secondary-content white-text"><strong>{{ ventas|length }} </strong></div></li>   
    {% else %}
     <li class="collection-item"><strong><i class="material-icons left">shopping_cart</i>No hay compras registradas en el sistema</strong></li>
    {% endif %}
  </ul> 


  <!-- Ventas del Usuario -->