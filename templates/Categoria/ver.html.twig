{% extends 'base.html.twig' %}

{% block contenido %} 
    
{% include "default/bannerMensaje.html.twig" with { 'mensaje' : 'Categoria'  } %}
    
<!-- Muestro Informacion -->
<ul class="collection with-header">
 <li class="collection-header white-text"><h4>Informacion de la Categoria</h4></li>
 <li class="collection-item"><strong><i class="material-icons left">info</i> ID:</strong> {{ categoria.id }}</li>
 <li class="collection-item"><strong><i class="material-icons left">info</i> Nombre:</strong> {{ categoria.nombre }}</li>
 <li class="collection-item"><strong><i class="material-icons left">info</i> Descripcion:</strong> {{ categoria.descripcion }}</li>
</ul>
<!-- Muestro Informacion -->


<!-- Botones de Direccionamiento -->
<div class="offset-s2 col s8 offset-s2">
    <center>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('categoria_editar',{'idCategoria': categoria.id}) }}" class="waves-effect waves-light btn colorOficial white-text">
         <i class="material-icons left">edit</i>Editar
        </a> 
        {% endif %}
        <a href="{{ path('categoria') }}" class="waves-effect waves-light btn colorOficial white-text">
         <i class="material-icons left">assignment</i>Volver 
        </a> 
        <a href="{{ path('index') }}" class="waves-effect waves-light btn colorOficial white-text">
         <i class="material-icons left">home</i>Volver al Home
        </a> 
    </center>
</div>
<!-- Botones de Direccionamiento -->

<br>
<br>

{% endblock %}

